@model CompanyProject.Models.CostReport

@{
    ViewData["Title"] = "CostReportList";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<style>
    #table-div {
        margin: 25px;
    }
</style>

<div style="margin: 25px">

    @if (ViewData["ProjectInfo"] != null)
    {
        <h2>Cost Report List For @ViewData["ProjectInfo"]</h2>

    }
</div>

<p style="margin: 25px">
    Budget = $@Model.projectBudget.ToString(), Budget Used = $@Model.taskCost.ToString(),
    Budget Remaining = $@Model.remaining.ToString()
</p>

<div id="table-div">
    <table class="table table-hover col-md-3 table-striped table-bordered caption-top">
        <caption>Tasks</caption>
        <thead>
            <tr>
                <th>
                    Task ID
                </th>
                <th>
                    Task Name
                </th>
                <th>
                    Task Budget
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.tasks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.taskID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.taskName)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.cost)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p style="margin: 25px"><strong>Task Total = $@Model.taskCost.ToString()</strong></p>

<div id="table-div">
    <table class="table table-hover col-md-3 table-striped table-bordered caption-top">
        <caption>Employee Pay</caption>
        <thead>
            <tr>
                <th>
                    Task Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Hours
                </th>
                <th>
                    Salary
                </th>
                <th>
                    Salary for every 8 hours worked on project
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.taskReports)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.taskName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hours)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.salary)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.pay)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p style="margin: 25px"><strong>Total Salary = $@Model.employeeSalary.ToString()</strong></p>

<p style="margin: 25px;"><strong>Total Budget with salary = $@Model.totalRemaining.ToString()</strong></p>

<script>
    $(document).ready(function () {
        $('table').DataTable();
    });
</script>

