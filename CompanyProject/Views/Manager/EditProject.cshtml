@model CompanyProject.Models.Project

@{
    ViewData["Title"] = "EditProject";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2 style="margin:25px">Edit Project</h2>

<div class="row" style="margin: 25px;">
    <div class="col-md-4">
        <form asp-action="EditProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="projID" class="control-label">Project ID</label>
                <input asp-for="projID" class="form-control" readonly />
                <span asp-validation-for="projID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="projName" class="control-label">Project Name (Required)</label>
                <input asp-for="projName" class="form-control" />
                <span asp-validation-for="projName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="dueDate" class="control-label">Due Date (Required)</label>
                <input asp-for="dueDate" type="date" class="form-control" />
                <span asp-validation-for="dueDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="display:none;">
                <label asp-for="depID" class="control-label">Department ID</label>
                <input asp-for="depID" class="form-control" readonly />
                <span asp-validation-for="depID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="location" class="control-label">Location (Optional)</label>
                <select asp-for="location" asp-items="@Model.locations">
                    <option value="0">none</option>
                </select>
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="cost" class="control-label">Budget (Required)</label>
                <input asp-for="cost" class="form-control" />
                <span asp-validation-for="cost" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="projStatus" class="control-label">Project Status (Required)</label>
                <input asp-for="projStatus" class="form-control" />
                <span asp-validation-for="projStatus" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="field" class="control-label">Field (Optional)</label>
                <input asp-for="field" class="form-control" />
                <span asp-validation-for="field" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

<script>

    $(document).ready(function () {
        $('select').selectize({
            sortField: 'text'
        });
    });
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js" integrity="sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css" integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />

