@model CompanyProject.Models.CostReport

@{
    ViewData["Title"] = "CostReport";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2 style="margin: 25px;">Cost Report</h2>

<div class="row" style="margin: 25px;">
    <div class="col-md-4">
        <form asp-action="CostReport">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="projectID" class="control-label">Input Project ID</label>
                <input asp-for="projectID" class="form-control" />
                <span asp-validation-for="projectID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Generate" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>


