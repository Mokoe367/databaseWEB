@model CompanyProject.Models.Tasks

@{
    ViewData["Title"] = "DeleteTask";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2 style="margin: 25px;">Delete Task</h2>

<div class="row" style="margin: 25px;">
    <div class="col-md-4">
        <form asp-action="DeleteTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="taskID" class="control-label"></label>
                <input asp-for="taskID" class="form-control" readonly />
                <span asp-validation-for="taskID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="taskName" class="control-label">Task Name</label>
                <input asp-for="taskName" class="form-control" readonly/>
                <span asp-validation-for="taskName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="cost" class="control-label">Budget</label>
                <input asp-for="cost" class="form-control" readonly/>
                <span asp-validation-for="cost" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="taskDueDate" class="control-label">Task Due Date</label>
                <input asp-for="taskDueDate" class="form-control" readonly/>
                <span asp-validation-for="taskDueDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="projID" class="control-label">Project ID</label>
                <input asp-for="projID" class="form-control" readonly/>
                <span asp-validation-for="projID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>



