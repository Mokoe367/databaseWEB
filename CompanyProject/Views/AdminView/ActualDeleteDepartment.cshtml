@model CompanyProject.Models.Department

@{
    ViewData["Title"] = "ActualDeleteDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin: 25px;">Actual Delete Department</h2>

<div class="row" style="margin: 25px;">
    <div class="col-md-4">
        <form asp-action="ActualDeleteDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="depID" class="control-label">ID</label>
                <input asp-for="depID" class="form-control" readonly/>
                <span asp-validation-for="depID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="location" class="control-label">Location</label>
                <input asp-for="location" class="form-control" readonly/>
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="depName" class="control-label">Department Name</label>
                <input asp-for="depName" class="form-control" readonly/>
                <span asp-validation-for="depName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="mgrName" class="control-label">Manager</label>
                <input asp-for="mgrName" class="form-control" readonly/>
                <span asp-validation-for="mgrName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="deleted_flag" class="control-label"></label>
                <input asp-for="deleted_flag" class="form-control" readonly/>
                <span asp-validation-for="deleted_flag" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>


