@model CompanyProject.Models.Tasks

@{
    ViewData["Title"] = "EditTask";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin: 25px;">Edit Task</h2>

<div class="row" style="margin: 25px;">
    <div class="col-md-4">
        <form asp-action="EditTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="taskID" class="control-label"></label>
                <input asp-for="taskID" class="form-control" readonly />
                <span asp-validation-for="taskID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="taskName" class="control-label">Task Name</label>
                <input asp-for="taskName" class="form-control" />
                <span asp-validation-for="taskName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="cost" class="control-label">Budget</label>
                <input asp-for="cost" class="form-control" />
                <span asp-validation-for="cost" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="taskDueDate" class="control-label">Task Due Date</label>
                <input asp-for="taskDueDate" type="date" class="form-control" />
                <span asp-validation-for="taskDueDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="projName" class="control-label">Project (enter either ID or name)</label>
                <input asp-for="projName" class="form-control" />
                <span asp-validation-for="projName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>



