@model CompanyProject.Models.Supplier

@{
    ViewData["Title"] = "ActualDeleteSupplier";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin: 25px;">Actual Delete Supplier</h2>

<div class="row" style="margin: 25px;">
    <div class="col-md-4">
        <form asp-action="ActualDeleteSupplier">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="supID" class="control-label">Supplier ID</label>
                <input asp-for="supID" class="form-control" readonly/>
                <span asp-validation-for="supID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="product" class="control-label">Product</label>
                <input asp-for="product" class="form-control" readonly/>
                <span asp-validation-for="product" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="name" class="control-label">Supplier Name</label>
                <input asp-for="name" class="form-control" readonly/>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="roleName" class="control-label">Role Name</label>
                <input asp-for="roleName" class="form-control" readonly/>
                <span asp-validation-for="roleName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="deleted_flag" class="control-label"></label>
                <input asp-for="deleted_flag" class="form-control" readonly/>
                <span asp-validation-for="deleted_flag" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>


