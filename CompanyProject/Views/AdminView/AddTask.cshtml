@model CompanyProject.Models.Tasks

@{
    ViewData["Title"] = "AddTask";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin: 25px;">Add Task</h2>

<div class="row" style="margin: 25px;">
    <div class="col-md-4">
        <form asp-action="AddTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="taskName" class="control-label">Task Name</label>
                <input asp-for="taskName" class="form-control" />
                <span asp-validation-for="taskName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="cost" class="control-label">Budget</label>
                <input asp-for="cost" class="form-control" />
                <span asp-validation-for="cost" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="taskDueDate" class="control-label">Task Due Date</label>
                <input asp-for="taskDueDate" type="date" class="form-control" />
                <span asp-validation-for="taskDueDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="projName" class="control-label">Project</label>
                <input asp-for="projName" class="form-control" placeholder="insert either name or ID" />
                <span asp-validation-for="projName" class="text-danger"></span>
            </div>          
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>



