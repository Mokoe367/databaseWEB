@model CompanyProject.Models.Department

@{
    ViewData["Title"] = "EditDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin:25px">EditDepartment</h2>

<div class="row" style="margin:25px">
    <div class="col-md-4">
        <form asp-action="EditDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="depID" class="control-label">Department ID</label>
                <input asp-for="depID" class="form-control" readonly />
                <span asp-validation-for="depID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="location" class="control-label">Location</label>
                <select asp-for="location" asp-items="@Model.locations">
                    <option value="0">none</option>
                </select>
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="depName" class="control-label">Department Name</label>
                <input asp-for="depName" class="form-control" />
                <span asp-validation-for="depName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="mgrID" class="control-label">Manager</label>
                <select asp-for="mgrID" asp-items="@Model.managers">
                    <option value="0">none</option>
                </select>
                <span asp-validation-for="mgrID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mb-3">
        <a asp-action="Index">Back to List</a>
    </div>

</div>

<script>

    $(document).ready(function () {
        $('select').selectize({
            sortField: 'text'
        });
    });
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js" integrity="sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css" integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />
