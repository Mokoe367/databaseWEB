<style>
    .admin-nav {
        width: 100%;
        box-sizing:border-box;
        padding: 0 25px;
        display: flex;
        flex-direction: row;
        align-items:center;
    }
    .admin-nav a {
        margin-right: 15px;
        color: black;
        font-weight: 500;
        display: block;
        position: relative;
        padding: 0.2em 0;
    }
    .admin-nav a:hover {
        cursor: pointer;
        color: #0d6efd;
    }
    .content-body {
        margin: 25px;
        display: none;
    }
    .show-active{
        display:block;
        animation: fade 0.3s;
    }
    .tab {
        text-decoration: none;
    }
    .tab-active {
        font-size: 2.5rem;
        text-decoration: underline;
        text-underline-offset: 0.5em;
    }

    @@keyframes fade {
        from{
            opacity: 0
        }
        to {
            opacity: 1
        }
    }

    /* Fade in underline */
    .admin-nav a::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 0.1em;
        background-color: #0d6efd;
        opacity: 0;
        transition: opacity 250ms, transform 500ms;
    }

    .admin-nav a:hover::after {
        opacity: 1;
        transform: translate3d(0, 0.2em, 0);
    } 
    .admin-nav a:focus::after {
        opacity: 1;
        transform: translate3d(0, 0.2em, 0);
    }

</style>


